<table class="table table-hover">
  <thead>
  <tr>
    <% if session[:last_order].nil? %>
        <th><%= link_to 'Name', breweries_path(order:"name") %></th>
        <th><%= link_to 'Year', breweries_path(order:"year") %></th>
    <% else %>
        <th><%= link_to 'Name', breweries_path(order:"name", desc:!@desc) %></th>
        <th><%= link_to 'Year', breweries_path(order:"year", desc:!@desc) %></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>