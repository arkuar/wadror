
<h1>Listing Styles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
        <td><%= link_to 'Show', style, class:'btn btn-default' %></td>

        <% if current_user %>
            <td><%= link_to 'Edit', edit_style_path(style), class:'btn btn-default' %></td>
            <% if admin_user %>
            <td><%= link_to 'Destroy', style, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
    <%= link_to 'New Style', new_style_path, class:'btn btn-primary' %>
<% end %>